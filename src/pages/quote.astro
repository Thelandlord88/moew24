---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { routes } from '@/lib/routes';
---

<BaseLayout 
  title="Get Your Free Cleaning Quote | One N Done Bond Clean"
  description="Get a free quote for professional bond cleaning, spring cleaning, or house cleaning services. Quick response, competitive prices, satisfaction guaranteed."
  canonical={routes.site.quote()}
>
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-extrabold tracking-tight mb-4">Get Your Free Quote</h1>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto">
        Tell us about your cleaning needs and we'll provide a competitive quote within 24 hours. 
        No obligation, no hidden fees.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Quote Form -->
      <div class="bg-white p-8 rounded-lg border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-bold mb-6">Request Your Quote</h2>
        
        <form class="space-y-6" action="#" method="POST">
          <!-- Contact Information -->
          <div class="grid sm:grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block text-sm font-medium text-slate-700 mb-2">First Name *</label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                required 
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
              >
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium text-slate-700 mb-2">Last Name *</label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                required 
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
              >
            </div>
          </div>

          <div class="grid sm:grid-cols-2 gap-4">
            <div>
              <label for="email" class="block text-sm font-medium text-slate-700 mb-2">Email *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
              >
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-slate-700 mb-2">Phone *</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                required 
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
              >
            </div>
          </div>

          <!-- Property Information -->
          <div>
            <label for="address" class="block text-sm font-medium text-slate-700 mb-2">Property Address *</label>
            <input 
              type="text" 
              id="address" 
              name="address" 
              required 
              placeholder="123 Main Street, Brisbane QLD 4000"
              class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
            >
          </div>

          <div class="grid sm:grid-cols-2 gap-4">
            <div>
              <label for="propertyType" class="block text-sm font-medium text-slate-700 mb-2">Property Type *</label>
              <select 
                id="propertyType" 
                name="propertyType" 
                required 
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
              >
                <option value="">Select property type</option>
                <option value="apartment">Apartment/Unit</option>
                <option value="house">House</option>
                <option value="townhouse">Townhouse</option>
                <option value="office">Office</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div>
              <label for="bedrooms" class="block text-sm font-medium text-slate-700 mb-2">Bedrooms</label>
              <select 
                id="bedrooms" 
                name="bedrooms" 
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
              >
                <option value="">Select bedrooms</option>
                <option value="1">1 Bedroom</option>
                <option value="2">2 Bedrooms</option>
                <option value="3">3 Bedrooms</option>
                <option value="4">4 Bedrooms</option>
                <option value="5+">5+ Bedrooms</option>
              </select>
            </div>
          </div>

          <!-- Service Selection -->
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-3">Services Required *</label>
            <div class="space-y-3">
              <label class="flex items-center">
                <input type="checkbox" name="services[]" value="bond-cleaning" class="mr-3 h-4 w-4 text-sky-600 focus:ring-sky-500 border-slate-300 rounded">
                <span>Bond Cleaning (End of Lease)</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" name="services[]" value="spring-cleaning" class="mr-3 h-4 w-4 text-sky-600 focus:ring-sky-500 border-slate-300 rounded">
                <span>Spring Cleaning</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" name="services[]" value="bathroom-deep-clean" class="mr-3 h-4 w-4 text-sky-600 focus:ring-sky-500 border-slate-300 rounded">
                <span>Bathroom Deep Clean</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" name="services[]" value="house-cleaning" class="mr-3 h-4 w-4 text-sky-600 focus:ring-sky-500 border-slate-300 rounded">
                <span>Regular House Cleaning</span>
              </label>
            </div>
          </div>

          <!-- Timing -->
          <div>
            <label for="preferredDate" class="block text-sm font-medium text-slate-700 mb-2">Preferred Date</label>
            <input 
              type="date" 
              id="preferredDate" 
              name="preferredDate" 
              class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
            >
          </div>

          <!-- Additional Information -->
          <div>
            <label for="message" class="block text-sm font-medium text-slate-700 mb-2">Additional Information</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4" 
              placeholder="Any specific requirements, areas of focus, or questions you have..."
              class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit" 
            class="w-full bg-sky-700 text-white font-bold py-4 px-6 rounded-lg hover:bg-sky-800 transition-colors flex items-center justify-center gap-2"
          >
            Get My Free Quote
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </button>
        </form>
      </div>

      <!-- Contact Information & Benefits -->
      <div class="space-y-8">
        <!-- Contact Details -->
        <div class="bg-slate-50 p-8 rounded-lg">
          <h3 class="text-xl font-bold mb-6">Get In Touch</h3>
          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-sky-100 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="text-sky-700">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92Z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold">Phone</p>
                <p class="text-slate-600">+61 7 3000 0000</p>
              </div>
            </div>
            
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-sky-100 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="text-sky-700">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2Z"></path>
                  <path d="m22 6-10 7L2 6"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold">Email</p>
                <p class="text-slate-600">quotes@onendone.com.au</p>
              </div>
            </div>
            
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-sky-100 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="text-sky-700">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 6v6l4 2"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold">Response Time</p>
                <p class="text-slate-600">Within 24 hours</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Benefits -->
        <div class="bg-sky-50 p-8 rounded-lg">
          <h3 class="text-xl font-bold mb-6">Why Choose Our Service?</h3>
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="text-green-600 mt-0.5">
                <path d="M9 12l2 2 4-4"></path>
                <circle cx="12" cy="12" r="9"></circle>
              </svg>
              <div>
                <p class="font-semibold">100% Bond Back Guarantee</p>
                <p class="text-sm text-slate-600">Get your full bond back or we re-clean for free</p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="text-green-600 mt-0.5">
                <path d="M9 12l2 2 4-4"></path>
                <circle cx="12" cy="12" r="9"></circle>
              </svg>
              <div>
                <p class="font-semibold">Real Estate Approved</p>
                <p class="text-sm text-slate-600">Meets all property management standards</p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="text-green-600 mt-0.5">
                <path d="M9 12l2 2 4-4"></path>
                <circle cx="12" cy="12" r="9"></circle>
              </svg>
              <div>
                <p class="font-semibold">Fully Insured</p>
                <p class="text-sm text-slate-600">Professional liability and public liability coverage</p>
              </div>
            </div>
            
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="text-green-600 mt-0.5">
                <path d="M9 12l2 2 4-4"></path>
                <circle cx="12" cy="12" r="9"></circle>
              </svg>
              <div>
                <p class="font-semibold">345+ Suburbs Covered</p>
                <p class="text-sm text-slate-600">Serving Brisbane, Logan, and Ipswich</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
