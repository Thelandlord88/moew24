// src/layouts/ProfessionalLayout.astro
/**
 * Professional Layout with Advanced Theme System
 * Service and location-aware theming, enhanced navigation, breadcrumbs
 */
import ThemeProvider from '@/components/theme/ThemeProvider.astro';
import { routes } from '@/lib/routes';

interface Props { 
  title: string; 
  description?: string; 
  canonical?: string;
  service?: string;      // For service-specific theming
  suburb?: string;       // For location-specific theming
  breadcrumbs?: Array<{label: string; href: string}>;
  showBreadcrumbs?: boolean;
}

const { 
  title, 
  description = "", 
  canonical = "/",
  service,
  suburb,
  breadcrumbs = [],
  showBreadcrumbs = false
} = Astro.props;

const site = Astro.site?.toString().replace(/\/$/, "") || "";
const canonicalAbs = canonical.startsWith('http') ? canonical : `${site}${canonical}`;

// Business structured data
const businessMods = import.meta.glob('/src/data/business.json', { eager: true, import: 'default' }) as Record<string, any>;
const business = Object.values(businessMods)[0] ?? {
  name: "One N Done Bond Clean",
  url: site,
  telephone: "+61 7 3000 0000",
  email: "quotes@onendone.com.au",
  address: {
    streetAddress: "123 Clean Street",
    addressLocality: "Brisbane",
    addressRegion: "QLD", 
    postalCode: "4000",
    addressCountry: "AU"
  }
};

const businessLD = {
  "@context":"https://schema.org",
  "@type":"LocalBusiness",
  "@id":`${site}#business`,
  name: business.name,
  url: business.url || site,
  telephone: business.telephone,
  email: business.email,
  address: business.address && {"@type":"PostalAddress", ...business.address}
};

// Breadcrumb structured data
const breadcrumbLD = showBreadcrumbs && breadcrumbs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.label,
    "item": new URL(item.href, site).href
  }))
} : null;

function safeJsonLd(o: any) { 
  return JSON.stringify(o).replace(/</g,"\\u003c").replace(/-->/g,"\\u002d\\u002d>"); 
}
---

<!doctype html>
<html lang="en-AU">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalAbs} />
    <meta name="theme-color" content="#0369a1" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalAbs} />
    <meta property="og:site_name" content="One N Done Bond Clean" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={safeJsonLd(businessLD)} />
    {breadcrumbLD && <script type="application/ld+json" set:html={safeJsonLd(breadcrumbLD)} />}
    
    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  
  <body class="min-h-screen">
    <ThemeProvider service={service} suburb={suburb}>
      <!-- Skip to main content for accessibility -->
      <a href="#main-content" class="skip-link">Skip to main content</a>
      
      <!-- Advanced Navigation Header -->
      <header class="site-header">
        <nav class="nav-container" aria-label="Main navigation">
          <div class="nav-brand">
            <a href={routes.site.home()} class="brand-link">
              <span class="brand-text">One N Done</span>
              <span class="brand-tagline">Bond Clean</span>
            </a>
          </div>
          
          <div class="nav-menu">
            <ul class="nav-links">
              <li><a href={routes.services.index()} class="nav-link">Services</a></li>
              <li><a href={routes.suburbs.index()} class="nav-link">Areas</a></li>
              <li><a href="/about/" class="nav-link">About</a></li>
              <li><a href={routes.blog.index()} class="nav-link">Blog</a></li>
            </ul>
            
            <div class="nav-actions">
              <a href={routes.site.quote()} class="btn-primary btn-md">Get Quote</a>
            </div>
          </div>
          
          <!-- Mobile menu button -->
          <button class="mobile-menu-button" aria-label="Toggle menu">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="3" y1="6" x2="21" y2="6"></line>
              <line x1="3" y1="12" x2="21" y2="12"></line>
              <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
          </button>
        </nav>
      </header>
      
      <!-- Breadcrumbs -->
      {showBreadcrumbs && breadcrumbs.length > 0 && (
        <nav class="breadcrumb-nav" aria-label="Breadcrumb">
          <div class="container">
            <ol class="breadcrumb-list">
              <li class="breadcrumb-item">
                <a href={routes.site.home()} class="breadcrumb-link">Home</a>
              </li>
              {breadcrumbs.map((crumb, index) => (
                <li class="breadcrumb-item">
                  <svg class="breadcrumb-separator" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {index === breadcrumbs.length - 1 ? (
                    <span class="breadcrumb-current" aria-current="page">{crumb.label}</span>
                  ) : (
                    <a href={crumb.href} class="breadcrumb-link">{crumb.label}</a>
                  )}
                </li>
              ))}
            </ol>
          </div>
        </nav>
      )}
      
      <!-- Main Content -->
      <main id="main-content" class="main-content">
        <slot />
      </main>
      
      <!-- Professional Footer -->
      <footer class="site-footer">
        <div class="container">
          <div class="footer-content">
            <div class="footer-brand">
              <h3 class="footer-title">One N Done Bond Clean</h3>
              <p class="footer-description">
                Professional cleaning services across Queensland with a 100% bond back guarantee.
                Servicing 345+ suburbs in Brisbane, Logan, and Ipswich.
              </p>
            </div>
            
            <div class="footer-links">
              <div class="footer-section">
                <h4 class="footer-heading">Services</h4>
                <ul class="footer-list">
                  <li><a href="/services/bond-cleaning/" class="footer-link">Bond Cleaning</a></li>
                  <li><a href="/services/spring-clean/" class="footer-link">Spring Cleaning</a></li>
                  <li><a href="/services/bathroom-deep-clean/" class="footer-link">Bathroom Deep Clean</a></li>
                  <li><a href="/services/house-cleaning/" class="footer-link">House Cleaning</a></li>
                </ul>
              </div>
              
              <div class="footer-section">
                <h4 class="footer-heading">Areas</h4>
                <ul class="footer-list">
                  <li><a href={routes.suburbs.index()} class="footer-link">All Suburbs</a></li>
                  <li><a href="/suburbs/brisbane-city/" class="footer-link">Brisbane City</a></li>
                  <li><a href="/suburbs/logan-central/" class="footer-link">Logan</a></li>
                  <li><a href="/suburbs/ipswich/" class="footer-link">Ipswich</a></li>
                </ul>
              </div>
              
              <div class="footer-section">
                <h4 class="footer-heading">Company</h4>
                <ul class="footer-list">
                  <li><a href="/about/" class="footer-link">About Us</a></li>
                  <li><a href={routes.site.quote()} class="footer-link">Get Quote</a></li>
                  <li><a href={routes.blog.index()} class="footer-link">Blog</a></li>
                  <li><a href="/contact/" class="footer-link">Contact</a></li>
                </ul>
              </div>
            </div>
          </div>
          
          <div class="footer-bottom">
            <p class="copyright">Â© {new Date().getFullYear()} One N Done Bond Clean. All rights reserved.</p>
            <div class="footer-legal">
              <a href="/privacy/" class="legal-link">Privacy Policy</a>
              <a href="/terms/" class="legal-link">Terms of Service</a>
            </div>
          </div>
        </div>
      </footer>
    </ThemeProvider>
  </body>
</html>

<style>
  /* Global Styles */
  :root {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-synthesis: none;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  .skip-link {
    position: absolute;
    top: -40px;
    left: 6px;
    background: var(--brand-primary);
    color: var(--brand-on-primary);
    padding: 8px;
    text-decoration: none;
    border-radius: 4px;
    z-index: 1000;
    transition: top var(--transition-fast);
  }
  
  .skip-link:focus {
    top: 6px;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }
  
  /* Header Styles */
  .site-header {
    background-color: var(--surface-base);
    border-bottom: 1px solid var(--surface-border);
    position: sticky;
    top: 0;
    z-index: 50;
    backdrop-filter: blur(8px);
    background-color: rgba(255, 255, 255, 0.95);
  }
  
  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-md) var(--spacing-lg);
  }
  
  .nav-brand .brand-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: var(--brand-primary);
  }
  
  .brand-text {
    font-size: 1.5rem;
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.025em;
  }
  
  .brand-tagline {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.8;
    margin-top: -2px;
  }
  
  .nav-menu {
    display: flex;
    align-items: center;
    gap: var(--spacing-xl);
  }
  
  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: var(--spacing-lg);
  }
  
  .nav-link {
    color: var(--surface-on-variant);
    text-decoration: none;
    font-weight: 500;
    padding: var(--spacing-sm) 0;
    transition: color var(--transition-fast);
    position: relative;
  }
  
  .nav-link:hover {
    color: var(--brand-primary);
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--brand-primary);
    transition: width var(--transition-medium);
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
  
  .mobile-menu-button {
    display: none;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: none;
    background: none;
    color: var(--surface-on);
    cursor: pointer;
  }
  
  .mobile-menu-button svg {
    width: 24px;
    height: 24px;
  }
  
  /* Breadcrumbs */
  .breadcrumb-nav {
    background-color: var(--surface-elevated);
    border-bottom: 1px solid var(--surface-border-light);
  }
  
  .breadcrumb-list {
    display: flex;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: var(--spacing-sm) 0;
    gap: var(--spacing-xs);
  }
  
  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }
  
  .breadcrumb-separator {
    width: 16px;
    height: 16px;
    color: var(--surface-on-variant);
    opacity: 0.5;
  }
  
  .breadcrumb-link {
    color: var(--surface-on-variant);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color var(--transition-fast);
  }
  
  .breadcrumb-link:hover {
    color: var(--brand-primary);
  }
  
  .breadcrumb-current {
    color: var(--surface-on);
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  /* Main Content */
  .main-content {
    min-height: 70vh;
    padding: var(--spacing-xl) 0;
  }
  
  /* Footer */
  .site-footer {
    background-color: var(--surface-raised);
    border-top: 1px solid var(--surface-border);
    margin-top: var(--spacing-xxl);
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--spacing-xxl);
    padding: var(--spacing-xxl) 0;
  }
  
  .footer-brand .footer-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--surface-on);
    margin: 0 0 var(--spacing-md) 0;
  }
  
  .footer-description {
    color: var(--surface-on-variant);
    line-height: 1.6;
    margin: 0;
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
  }
  
  .footer-heading {
    font-size: 1rem;
    font-weight: 600;
    color: var(--surface-on);
    margin: 0 0 var(--spacing-md) 0;
  }
  
  .footer-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .footer-list li {
    margin-bottom: var(--spacing-sm);
  }
  
  .footer-link {
    color: var(--surface-on-variant);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color var(--transition-fast);
  }
  
  .footer-link:hover {
    color: var(--brand-primary);
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-lg) 0;
    border-top: 1px solid var(--surface-border);
  }
  
  .copyright {
    color: var(--surface-on-variant);
    font-size: 0.875rem;
    margin: 0;
  }
  
  .footer-legal {
    display: flex;
    gap: var(--spacing-lg);
  }
  
  .legal-link {
    color: var(--surface-on-variant);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color var(--transition-fast);
  }
  
  .legal-link:hover {
    color: var(--brand-primary);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .nav-menu {
      display: none;
    }
    
    .mobile-menu-button {
      display: flex;
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }
    
    .footer-links {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: var(--spacing-md);
      text-align: center;
    }
    
    .breadcrumb-list {
      flex-wrap: wrap;
    }
  }
</style>
