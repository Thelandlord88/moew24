          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
            Join the {suburb.name} residents who trust us with their carpet cleaning. 
            Professional results with heritage home care.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button variant="primary" size="lg" href="/quote">
              Get Your Free Quote
            </Button>
            <Button variant="secondary" size="lg" href="tel:1300663366">
              Call for Same-Day Service
            </Button>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Local Trust Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <h3 class="text-2xl font-bold mb-8 text-gray-900">
        Established in {suburb.name}
      </h3>
      
      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <Card variant="highlight">
          <div class="text-3xl font-bold text-[var(--primary-color)] mb-2">400+</div>
          <div class="text-gray-700 font-medium">Carpets Cleaned</div>
          <div class="text-sm text-gray-500 mt-1">in {suburb.name}</div>
        </Card>
        
        <Card variant="highlight">
          <div class="text-3xl font-bold text-[var(--primary-color)] mb-2">98%</div>
          <div class="text-gray-700 font-medium">Customer Satisfaction</div>
          <div class="text-sm text-gray-500 mt-1">verified results</div>
        </Card>
        
        <Card variant="highlight">
          <div class="text-3xl font-bold text-[var(--primary-color)] mb-2">5+</div>
