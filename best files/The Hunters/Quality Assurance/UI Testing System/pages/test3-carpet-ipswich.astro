---
// üß™ TEST PAGE 3: Carpet Cleaning in Ipswich
// Rich purple theme with heritage community focus

import PageLayout from '../components/PageLayout.astro';
import Banner from '../components/Banner.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import { createTheme } from '../themeProvider.js';

const serviceSlug = 'carpet-cleaning';
const suburbSlug = 'ipswich';

// Get theme data for this combination
const theme = createTheme(serviceSlug, suburbSlug);
const service = theme.service;
const suburb = theme.suburb;

const title = `${service.name} in ${suburb.name} | OneDone Cleaning`;
const description = `Professional ${service.name.toLowerCase()} in ${suburb.name}. ${service.description}`;
---

<PageLayout 
  serviceSlug={serviceSlug}
  suburbSlug={suburbSlug}
  title={title}
  description={description}
>
  <!-- Hero Banner with purple theme and heritage focus -->
  <Banner 
    title={`${service.name} in Historic ${suburb.name}`}
    subtitle={`${service.tagline} ‚Ä¢ Caring for carpets in Queensland's heritage city`}
    variant="hero"
  >
    <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
      <Button variant="primary" size="lg">
        Book Carpet Clean ‚Ä¢ {service.priceRange}
      </Button>
      <Button variant="outline" size="lg">
        üèõÔ∏è Heritage Home Specialist
      </Button>
    </div>
  </Banner>

  <!-- Heritage-Focused Service Info -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- Ipswich heritage highlights -->
        <div class="mb-12 text-center">
          <h2 class="text-3xl font-bold mb-6 text-gray-900">
            Heritage Home Carpet Specialists
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {suburb.highlights.map(highlight => (
              <Card variant="feature" class="text-center">
                <div class="text-lg font-semibold text-[var(--primary-color)] mb-2">
                  üèõÔ∏è
                </div>
                <div class="text-gray-700">
                  {highlight}
                </div>
              </Card>
            ))}
          </div>
        </div>

        <!-- Specialized carpet cleaning features -->
        <div class="mb-12">
          <h3 class="text-2xl font-bold mb-8 text-center text-gray-900">
            Our Professional {service.name} Process
          </h3>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            {service.features.map((feature, index) => (
              <Card class="text-center">
                <div class="text-[var(--service-accent)] text-xl mb-2">
                  <span class="bg-[var(--primary-color)] text-white w-8 h-8 rounded-full inline-flex items-center justify-center text-sm font-bold">
                    {index + 1}
                  </span>
                </div>
                <div class="font-medium text-gray-800">
                  {feature}
                </div>
              </Card>
            ))}
          </div>
        </div>

        <!-- Heritage home expertise -->
        <div class="bg-gradient-to-br {service.bgGradient} rounded-2xl p-8 mb-12">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h3 class="text-2xl font-bold mb-4 text-[var(--text-color)]">
                Trusted in Historic {suburb.name}
              </h3>
              <p class="text-[var(--text-color)] mb-6 opacity-90">
                With over {suburb.population.toLocaleString()} residents, {suburb.name} is renowned for its 
                heritage buildings and established community. We understand the unique needs of both 
                historic and modern homes.
              </p>
              
              <div class="space-y-3">
                <div class="flex items-center gap-3 text-[var(--text-color)]">
                  <div class="w-6 h-6 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                    <span class="text-sm">‚úì</span>
                  </div>
                  <span>Heritage home experience</span>
                </div>
                <div class="flex items-center gap-3 text-[var(--text-color)]">
                  <div class="w-6 h-6 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                    <span class="text-sm">‚úì</span>
                  </div>
                  <span>Gentle on antique carpets</span>
                </div>
                <div class="flex items-center gap-3 text-[var(--text-color)]">
                  <div class="w-6 h-6 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                    <span class="text-sm">‚úì</span>
                  </div>
