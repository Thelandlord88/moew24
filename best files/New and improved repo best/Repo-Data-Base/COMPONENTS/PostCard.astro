---
import type { Post } from "../lib/blog";
const { post } = Astro.props as { post: Post };
const permalink = `/blog/${post.slug}/`;
---

<article class="rounded-2xl border p-5 hover:shadow-sm transition">
  <a href={permalink} class="block">
    <h3 class="text-lg font-semibold">{post.data.title}</h3>
    <p class="mt-2 text-sm text-slate-600">{post.data.description}</p>
  </a>
  <div class="mt-3 text-xs text-slate-500">
    <time datetime={post.data.publishDate.toISOString()}>
      {post.data.publishDate.toLocaleDateString()}
    </time>
    {post.data.region ? <span> â€¢ {post.data.region}</span> : null}
  </div>
</article>
