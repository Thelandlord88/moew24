---
interface Props {
  title?: string;
  description?: string;
  primaryAction?: {
    text: string;
    href: string;
  };
  secondaryAction?: {
    text: string;
    href: string;
  };
}

const {
  title = "Ready to book your cleaning service?",
  description = "Get a fast, free quote today. Our friendly team is standing by to help with your cleaning needs.",
  primaryAction = {
    text: "Get Free Quote",
    href: "/quote"
  },
  secondaryAction = {
    text: "Call Now: (040) 577-9420",
    href: "tel:0405779420"
  }
} = Astro.props;
---

<section class="bg-gradient-to-r from-sky-600 to-sky-700 py-12 px-4 rounded-2xl text-white">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-2xl md:text-3xl font-bold mb-4">{title}</h2>
    <p class="text-sky-100 mb-8 max-w-2xl mx-auto">{description}</p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a 
        href={primaryAction.href}
        class="inline-flex items-center gap-2 bg-white text-sky-700 font-bold px-8 py-4 rounded-full shadow-lg hover:shadow-xl hover:bg-sky-50 transition-all duration-200 focus-visible:ring-4 focus-visible:ring-white/40"
      >
        {primaryAction.text}
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
      
      <a 
        href={secondaryAction.href}
        class="inline-flex items-center gap-2 text-white font-semibold px-6 py-3 border-2 border-white/30 rounded-full hover:bg-white/10 hover:border-white/60 transition-all duration-200 focus-visible:ring-4 focus-visible:ring-white/40"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        {secondaryAction.text}
      </a>
    </div>
  </div>
</section>
