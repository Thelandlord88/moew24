/* 
 * CONSOLIDATED CSS FILE FOR ONE N DONE BOND CLEAN
 * This file consolidates all CSS to avoid conflicts
 */

/* === TAILWIND CSS DIRECTIVES === */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* === CSS CUSTOM PROPERTIES === */
:root {
  --sky: #0ea5e9;
  --navy: #0f172a;
  --white: #ffffff;
  --black: #111827;
  --silver: #e2e8f0;
  --deep-navy: #0c2f5a;
  --fresh-sky: #0ea5e9;
  --light-sky: #e0f2fe;
  --light-gray: #f8fafc;
  --accent-yellow: #F59E0B;
  --red-error: #ef4444;
}

/* === VIEW TRANSITIONS (ENHANCED) === */
@media (prefers-reduced-motion: no-preference) {
  /* Smooth page transitions */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 300ms;
    animation-timing-function: cubic-bezier(0.25, 1, 0.5, 1);
  }

  /* Page title transitions */
  ::view-transition-old(page-title),
  ::view-transition-new(page-title) {
    animation-duration: 400ms;
    animation-timing-function: cubic-bezier(0.25, 1, 0.5, 1);
  }

  /* Main content fade */
  ::view-transition-old(main-content) {
    animation: fade-out 250ms ease-out;
  }
  
  ::view-transition-new(main-content) {
    animation: fade-in 250ms 100ms ease-in;
  }

  /* Header slide transitions */
  ::view-transition-old(header) {
    animation: slide-up 200ms ease-out;
  }
  
  ::view-transition-new(header) {
    animation: slide-down 200ms 50ms ease-in;
  }

  /* Footer slide transitions */
  ::view-transition-old(footer) {
    animation: slide-down 200ms ease-out;
  }
  
  ::view-transition-new(footer) {
    animation: slide-up 200ms 50ms ease-in;
  }

  /* Form transitions */
  ::view-transition-old(quote-form),
  ::view-transition-new(quote-form) {
    animation-duration: 350ms;
    animation-timing-function: cubic-bezier(0.34, 1.56, 0.64, 1);
  }
}

/* === KEYFRAME ANIMATIONS === */
@keyframes fade-in {
  0% { 
    opacity: 0;
    transform: translateY(8px);
  }
  100% { 
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fade-out {
  0% { 
    opacity: 1;
    transform: translateY(0);
  }
  100% { 
    opacity: 0;
    transform: translateY(-8px);
  }
}

@keyframes slide-up {
  0% { 
    opacity: 1;
    transform: translateY(0);
  }
  100% { 
    opacity: 0;
    transform: translateY(-20px);
  }
}

@keyframes slide-down {
  0% { 
    opacity: 0;
    transform: translateY(-20px);
  }
  100% { 
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scale-in {
  0% { 
    opacity: 0;
    transform: scale(0.95);
  }
  100% { 
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes scale-out {
  0% { 
    opacity: 1;
    transform: scale(1);
  }
  100% { 
    opacity: 0;
    transform: scale(1.05);
  }
}

/* === COMPONENT STYLES === */

/* Liquid-metal FAQ backdrop: navy to sky gradient with radial sheen */
.faq-backdrop {
  background: linear-gradient(135deg, #0f172a 0%, #0ea5e9 100%);
  position: relative;
  overflow: hidden;
}

.faq-backdrop::before {
  content: "";
  position: absolute;
  inset: 0;
  background: radial-gradient(ellipse at top, rgba(255,255,255,0.06) 0%, transparent 70%);
  pointer-events: none;
}

/* Generic Lux-Grade Silver-to-White Gradient for section backgrounds */
.lux-bg {
  background: linear-gradient(135deg, #e2e8f0 0%, #fff 70%);
}

/* Subtle Silver-to-White Gradient for FAQ section wrapper */
.faq-lux-bg {
  background: linear-gradient(135deg, #e2e8f0 0%, #fff 70%);
}

/* Enhanced button styles */
.btn-primary {
  background-color: #0ea5e9;
  color: white;
  font-weight: 600;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  transition: all 0.2s ease;
  border: none;
  cursor: pointer;
}

.btn-primary:hover {
  background-color: #0284c7;
  transform: translateY(-1px);
  box-shadow: 0 10px 25px rgba(14, 165, 233, 0.3);
}

/* Enhanced form styles */
.form-input {
  width: 100%;
  padding: 0.75rem 1rem;
  border: 2px solid #e2e8f0;
  border-radius: 0.5rem;
  transition: border-color 0.2s ease;
}

.form-input:focus {
  outline: none;
  border-color: #0ea5e9;
  box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
}

/* Card hover effects */
.card-hover {
  transition: all 0.3s ease-out;
}

.card-hover:hover {
  transform: translateY(-4px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

/* Quote form enhancements */
.quote-step {
  opacity: 0.6;
  transition: opacity 0.2s ease;
}

.quote-step.active {
  opacity: 1;
}

/* Progress bar */
.progress-bar {
  height: 0.5rem;
  background-color: #e2e8f0;
  border-radius: 9999px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #0ea5e9;
  transition: all 0.5s ease-out;
}

/* Gallery enhancements */
.gallery-item {
  transition: all 0.3s ease-out;
}

.gallery-item:hover {
  transform: scale(1.05);
  z-index: 10;
}

/* Testimonial cards */
.testimonial-card {
  background-color: white;
  border-radius: 0.75rem;
  padding: 1.5rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.testimonial-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
}

/* Service area cards */
.area-card {
  background-color: white;
  border-radius: 0.5rem;
  padding: 1rem;
  border: 1px solid #e2e8f0;
  transition: all 0.2s ease;
}

.area-card:hover {
  border-color: #7dd3fc;
  background-color: #f0f9ff;
  transform: translateY(-1px);
}

/* Navigation enhancements */
.nav-link {
  transition: all 0.2s ease;
}

.nav-link:hover {
  transform: translateY(-1px);
}

/* FAQ accordion */
.faq-question {
  cursor: pointer;
  transition: all 0.2s ease;
}

.faq-question:hover {
  color: #0ea5e9;
}

.faq-answer {
  overflow: hidden;
  transition: all 0.3s ease-out;
}

.faq-answer.open {
  max-height: 500px;
}

.faq-answer.closed {
  max-height: 0;
}

/* Loading states */
.loading {
  opacity: 0.6;
  pointer-events: none;
}

.spinner {
  animation: spin 1s linear infinite;
  width: 1.25rem;
  height: 1.25rem;
  border: 2px solid #bfdbfe;
  border-top-color: #0ea5e9;
  border-radius: 50%;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Success/Error states */
.alert-success {
  background-color: #f0fdf4;
  border: 1px solid #bbf7d0;
  color: #166534;
  padding: 1rem;
  border-radius: 0.5rem;
}

.alert-error {
  background-color: #fef2f2;
  border: 1px solid #fecaca;
  color: #b91c1c;
  padding: 1rem;
  border-radius: 0.5rem;
}

.alert-warning {
  background-color: #fffbeb;
  border: 1px solid #fed7aa;
  color: #c2410c;
  padding: 1rem;
  border-radius: 0.5rem;
}

/* Mobile optimizations */
@media (max-width: 768px) {
  .mobile-optimized {
    font-size: 0.875rem;
    padding: 0.5rem 1rem;
  }
}

/* Print styles */
@media print {
  .no-print {
    display: none !important;
  }
  
  .print-break {
    break-after: page;
  }
}

/* Dark mode support (future-ready) */
@media (prefers-color-scheme: dark) {
  .dark-mode-ready {
    background-color: #0f172a;
    color: white;
  }
}

/* High contrast mode */
@media (prefers-contrast: high) {
  .form-input {
    border: 4px solid black;
  }
  
  .btn-primary {
    background-color: black;
    color: white;
    border: 2px solid white;
  }
}

/* Focus management for accessibility */
.focus-visible {
  outline: none;
}

.focus-visible:focus-visible {
  box-shadow: 0 0 0 2px #0ea5e9, 0 0 0 4px rgba(14, 165, 233, 0.2);
}

/* Skip links */
.skip-link {
  position: absolute;
  left: -10000px;
  top: auto;
  width: 1px;
  height: 1px;
  overflow: hidden;
}

.skip-link:focus {
  position: absolute;
  top: 1rem;
  left: 1rem;
  background-color: #0ea5e9;
  color: white;
  padding: 1rem;
  border-radius: 0.25rem;
  z-index: 50;
  width: auto;
  height: auto;
  overflow: visible;
}

/* Smooth scrolling for anchor links */
html {
  scroll-behavior: smooth;
}

/* Remove animations for users who prefer reduced motion */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
  
  /* Disable view transitions for reduced motion */
  ::view-transition-old(*),
  ::view-transition-new(*) {
    animation: none !important;
  }
}
