{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["site","brand","services","proximity"],
  "properties": {
    "site": { "type": "string", "pattern": "^https?://" },
    "brand": { "type": "string", "minLength": 1 },
    "services": { "type": "array", "minItems": 1, "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" } },
    "proximity": { "type": "object", "required": ["biasKm","clusterBoost","crossPenalty","maxResults"],
      "properties": { "biasKm": { "type": "number" }, "clusterBoost": { "type": "number" }, "crossPenalty": { "type": "number" }, "maxResults": { "type": "integer", "minimum": 1 } } }
  }
}
