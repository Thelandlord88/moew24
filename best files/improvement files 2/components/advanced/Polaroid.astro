---
// Import images so Vite/Astro can bundle them correctly
import ovenBefore from '~/assets/images/oven.jpg';
import ovenAfter from '~/assets/images/og.jpg';
import bathBefore from '~/assets/images/bath.jpg';
import bathAfter from '~/assets/images/nans.png';
import tapBefore from '~/assets/images/tap.jpg';
import tapAfter from '~/assets/images/nans.png';
import { Image } from 'astro:assets';
---
<!-- ========== Yesterday’s Jobs ========== -->

<section class="bg-gradient-to-b from-blue-50 to-gray-100 py-14 px-3">
  <div class="max-w-6xl mx-auto">

    <!-- Heading -->
    <h2 class="font-extrabold text-3xl md:text-5xl tracking-tight text-center text-[#1e1e2e] mb-10 drop-shadow-sm" style="font-family: 'Playfair Display', serif;">
      Yesterday’s Jobs
      <span class="block text-lg font-light text-blue-500 tracking-normal">in Polaroids</span>
    </h2>

    <!-- Polaroids -->
    <div class="flex flex-col md:flex-row gap-10 md:gap-7 justify-center items-start">

      <!-- Card 1 – Oven -->
      <figure class="group polaroid-card relative bg-white rounded-[1.5rem] shadow-xl border-2 border-gray-200 overflow-visible w-full md:w-1/3 px-0 pb-6 flex flex-col items-center transition-all duration-500 ease-[cubic-bezier(.22,1,.36,1)] hover:scale-105 hover:shadow-[0_6px_30px_0_rgba(30,64,175,0.09),0_2px_4px_0_rgba(68,174,252,0.10)] active:scale-97 active:opacity-90 cursor-pointer rotate-[-3deg]">
        <div class="relative aspect-[3/4] w-full h-80 md:h-auto overflow-hidden rounded-xl mt-5 mb-4 shadow-2xl bg-gradient-to-tr from-gray-100 via-white to-gray-50">
          <Image src={ovenBefore} alt="Oven before" class="absolute inset-0 w-full h-full object-cover opacity-100 transition-opacity duration-500 group-hover:opacity-0 z-10" widths={[400,640,800]} sizes="(min-width: 768px) 33vw, 100vw" formats={["avif","webp","jpeg"]} />
          <Image src={ovenAfter}  alt="Oven after"  class="absolute inset-0 w-full h-full object-cover opacity-0   transition-opacity duration-500 group-hover:opacity-100 z-20" widths={[400,640,800]} sizes="(min-width: 768px) 33vw, 100vw" formats={["avif","webp","jpeg"]} />
          <span class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent group-hover:bg-transparent transition-all duration-300 pointer-events-none z-30"></span>
          <span class="polaroid-label absolute -bottom-8 left-1/2 -translate-x-1/2 px-5 py-1.5 bg-[#2c355c] text-white text-base rounded shadow font-[Permanent_Marker] group-hover:opacity-0 transition-all duration-300 z-40">Before</span>
          <span class="polaroid-label absolute -bottom-8 left-1/2 -translate-x-1/2 px-5 py-1.5 bg-yellow-400 text-[#1e1e2e] text-base rounded shadow font-[Permanent_Marker] opacity-0 group-hover:opacity-100 transition-all duration-300 z-40">After</span>
          <span class="absolute top-3 left-4 w-7 h-2 bg-yellow-200 rotate-[-12deg] rounded-[2px] opacity-65"></span>
          <span class="absolute top-3 right-5 w-7 h-2 bg-yellow-200 rotate-[10deg] rounded-[2px] opacity-65"></span>
        </div>
        <figcaption class="text-center mt-6 mx-3">
          <span class="text-lg font-extrabold text-gray-900 leading-tight mb-1 font-[Permanent_Marker]">Oven clean</span>
          <span class="text-base font-medium text-gray-600 font-[Quicksand]">The difference a deep clean makes.</span>
        </figcaption>
      </figure>

      <!-- Card 2 – Bathroom -->
      <figure class="group polaroid-card relative bg-white rounded-[1.5rem] shadow-xl border-2 border-gray-200 overflow-visible w-full md:w-1/3 px-0 pb-6 flex flex-col items-center transition-all duration-500 ease-[cubic-bezier(.22,1,.36,1)] hover:scale-105 hover:shadow-[0_6px_30px_0_rgba(30,64,175,0.09),0_2px_4px_0_rgba(68,174,252,0.10)] active:scale-97 active:opacity-90 cursor-pointer rotate-[3deg]">
        <div class="relative aspect-[3/4] w-full h-80 md:h-auto overflow-hidden rounded-xl mt-5 mb-4 shadow-2xl bg-gradient-to-tr from-gray-100 via-white to-gray-50">
          <Image src={bathBefore} alt="Bathroom before" class="absolute inset-0 w-full h-full object-cover opacity-100 transition-opacity duration-500 group-hover:opacity-0 z-10" widths={[400,640,800]} sizes="(min-width: 768px) 33vw, 100vw" formats={["avif","webp","jpeg"]} />
          <Image src={bathAfter}  alt="Bathroom after"  class="absolute inset-0 w-full h-full object-cover opacity-0   transition-opacity duration-500 group-hover:opacity-100 z-20" widths={[400,640,800]} sizes="(min-width: 768px) 33vw, 100vw" formats={["avif","webp","jpeg"]} />
          <span class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent group-hover:bg-transparent transition-all duration-300 pointer-events-none z-30"></span>
          <span class="polaroid-label absolute -bottom-8 left-1/2 -translate-x-1/2 px-5 py-1.5 bg-sky-700 text-white text-base rounded shadow font-[Permanent_Marker] group-hover:opacity-0 transition-all duration-300 z-40">Before</span>
          <span class="polaroid-label absolute -bottom-8 left-1/2 -translate-x-1/2 px-5 py-1.5 bg-yellow-400 text-[#1e1e2e] text-base rounded shadow font-[Permanent_Marker] opacity-0 group-hover:opacity-100 transition-all duration-300 z-40">After</span>
          <span class="absolute top-3 left-4 w-7 h-2 bg-yellow-200 rotate-[-12deg] rounded-[2px] opacity-65"></span>
          <span class="absolute top-3 right-5 w-7 h-2 bg-yellow-200 rotate-[10deg] rounded-[2px] opacity-65"></span>
        </div>
        <figcaption class="text-center mt-6 mx-3">
          <span class="text-lg font-extrabold text-gray-900 leading-tight mb-1 font-[Permanent_Marker]">Bathroom transformation</span>
          <span class="text-base font-medium text-gray-600 font-[Quicksand]">We bring the sparkle back!</span>
        </figcaption>
      </figure>

      <!-- Card 3 – Tap & Tracks -->
      <figure class="group polaroid-card relative bg-white rounded-[1.5rem] shadow-xl border-2 border-gray-200 overflow-visible w-full md:w-1/3 px-0 pb-6 flex flex-col items-center transition-all duration-500 ease-[cubic-bezier(.22,1,.36,1)] hover:scale-105 hover:shadow-[0_6px_30px_0_rgba(30,64,175,0.09),0_2px_4px_0_rgba(68,174,252,0.10)] active:scale-97 active:opacity-90 cursor-pointer rotate-[-3deg]">
        <div class="relative aspect-[3/4] w-full h-80 md:h-auto overflow-hidden rounded-xl mt-5 mb-4 shadow-2xl bg-gradient-to-tr from-gray-100 via-white to-gray-50">
          <Image src={tapBefore}  alt="Tracks before" class="absolute inset-0 w-full h-full object-cover opacity-100 transition-opacity duration-500 group-hover:opacity-0 z-10" widths={[400,640,800]} sizes="(min-width: 768px) 33vw, 100vw" formats={["avif","webp","jpeg"]} />
          <Image src={tapAfter}   alt="Tracks after"  class="absolute inset-0 w-full h-full object-cover opacity-0   transition-opacity duration-500 group-hover:opacity-100 z-20" widths={[400,640,800]} sizes="(min-width: 768px) 33vw, 100vw" formats={["avif","webp","jpeg"]} />
          <span class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent group-hover:bg-transparent transition-all duration-300 pointer-events-none z-30"></span>
          <span class="polaroid-label absolute -bottom-8 left-1/2 -translate-x-1/2 px-5 py-1.5 bg-sky-700 text-white text-base rounded shadow font-[Permanent_Marker] group-hover:opacity-0 transition-all duration-300 z-40">Before</span>
          <span class="polaroid-label absolute -bottom-8 left-1/2 -translate-x-1/2 px-5 py-1.5 bg-yellow-400 text-[#1e1e2e] text-base rounded shadow font-[Permanent_Marker] opacity-0 group-hover:opacity-100 transition-all duration-300 z-40">After</span>
          <span class="absolute top-3 left-4 w-7 h-2 bg-yellow-200 rotate-[-12deg] rounded-[2px] opacity-65"></span>
          <span class="absolute top-3 right-5 w-7 h-2 bg-yellow-200 rotate-[10deg] rounded-[2px] opacity-65"></span>
        </div>
        <figcaption class="text-center mt-6 mx-3">
          <span class="text-lg font-extrabold text-gray-900 leading-tight mb-1 font-[Permanent_Marker]">Details matter</span>
          <span class="text-base font-medium text-gray-600 font-[Quicksand]">Clean, polished, and guest-ready.</span>
        </figcaption>
      </figure>

    </div>
  </div>
</section>