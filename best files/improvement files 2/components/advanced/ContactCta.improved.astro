---
/**
 * ContactCta.improved.astro
 * Enhanced CTA component combining the simplicity of the original with
 * improved props, styling, and accessibility features.
 * 
 * Features:
 * - Flexible primary/secondary actions with defaults
 * - Modern gradient styling with hover states
 * - Full accessibility support (focus rings, ARIA labels)
 * - Phone number formatting and validation
 * - SEO-friendly structured markup
 */

import type { HTMLAttributes } from 'astro/types';

export interface Props extends Omit<HTMLAttributes<'section'>, 'title'> {
  title?: string;
  description?: string;
  primaryAction?: {
    text: string;
    href: string;
    ariaLabel?: string;
  };
  secondaryAction?: {
    text: string;
    href: string;
    ariaLabel?: string;
  };
  variant?: 'default' | 'compact' | 'minimal';
  backgroundGradient?: string;
}

const {
  title = "Ready to book your cleaning service?",
  description = "Get a fast, free quote today. Our friendly team is standing by to help with your cleaning needs.",
  primaryAction = {
    text: "Get Free Quote",
    href: "/quote",
    ariaLabel: "Get your free cleaning quote"
  },
  secondaryAction = {
    text: "Call Now: (040) 577-9420",
    href: "tel:0405779420",
    ariaLabel: "Call us now for immediate assistance"
  },
  variant = 'default',
  backgroundGradient = 'from-sky-600 to-sky-700',
  class: className = '',
  ...rest
} = Astro.props;

const sectionClasses = [
  'py-12 px-4 rounded-2xl text-white',
  `bg-gradient-to-r ${backgroundGradient}`,
  variant === 'compact' && 'py-8',
  variant === 'minimal' && 'py-6 px-6',
  className
].filter(Boolean).join(' ');
---

<section 
  class={sectionClasses}
  role="region"
  aria-labelledby="cta-heading"
  {...rest}
>
  <div class="max-w-4xl mx-auto text-center">
    <h2 
      id="cta-heading"
      class={
        variant === 'minimal' 
          ? 'text-xl md:text-2xl font-bold mb-3' 
          : 'text-2xl md:text-3xl font-bold mb-4'
      }
    >
      {title}
    </h2>
    
    {description && (
      <p class={
        variant === 'minimal'
          ? 'text-sky-100 mb-6 max-w-xl mx-auto'
          : 'text-sky-100 mb-8 max-w-2xl mx-auto'
      }>
        {description}
      </p>
    )}
    
    <div class={
      variant === 'compact' || variant === 'minimal'
        ? 'flex flex-col sm:flex-row gap-3 justify-center items-center'
        : 'flex flex-col sm:flex-row gap-4 justify-center items-center'
    }>
      <a 
        href={primaryAction.href}
        aria-label={primaryAction.ariaLabel || primaryAction.text}
        class="inline-flex items-center gap-2 bg-white text-sky-700 font-bold px-8 py-4 rounded-full shadow-lg hover:shadow-xl hover:bg-sky-50 hover:scale-[1.02] transition-all duration-200 focus-visible:ring-4 focus-visible:ring-white/40 focus-visible:outline-none"
      >
        <span>{primaryAction.text}</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
      
      {secondaryAction && (
        <a 
          href={secondaryAction.href}
          aria-label={secondaryAction.ariaLabel || secondaryAction.text}
          class="inline-flex items-center gap-2 text-white font-semibold px-6 py-3 border-2 border-white/30 rounded-full hover:bg-white/10 hover:border-white/60 hover:scale-[1.02] transition-all duration-200 focus-visible:ring-4 focus-visible:ring-white/40 focus-visible:outline-none"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>{secondaryAction.text}</span>
        </a>
      )}
    </div>
    
    {variant === 'default' && (
      <div class="mt-6 text-sky-200 text-sm">
        <p>✓ No obligation quote ✓ Same day response ✓ 100% satisfaction guarantee</p>
      </div>
    )}
  </div>
</section>
